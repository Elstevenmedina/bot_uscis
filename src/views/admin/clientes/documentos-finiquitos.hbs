<div class="container-fluid mt-2">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="card-title">Cargar finiquitos</h3>
                    </div>
                    <div class="col-sm-12">
                        {{>success}}
                        {{>errors}}
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card">
                <div class="card-body">
                    <form method="POST" id="formImport" action="/nuevo-documento" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="Cliente">Cliente</label>
                                <select name="Cliente" id="Cliente" class="form-control" required> 
                                    {{#each clientes}}
                                        <option value="{{_id}}">{{Nombres}} {{Apellidos}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <label for="pdf">Archivo <span class="text-muted">(PDF)</span></label>
                                <input type="file" name="pdf" id="pdf" class="form-control" readonly  accept="application/pdf" />
                            </div>
                            <div class="col-sm-12 mt-2 text-right">
                                <button class="btn btn-success" type="submit">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>